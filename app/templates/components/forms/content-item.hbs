<div class="col-sm-12" style="padding-bottom: 3%;">
  <h4>{{t contentItem.labelKey }}  <span class="in-lang">({{t labelSuffixKey }})</span></h4>

  {{#if isEditing}}
    {{#if contentItem.isPlainText}}
      <div>
        {{input value=contentValue type="text"  class="input-sm form-control fg-input"  }}
      </div>
      {{else}}
      <div class='wysiwyg-container'>
        {{wysiwyg-editor content=contentValue header="Example"}}
      </div>
    {{/if}}
  {{else}}
    <div class="content-item-container">
      {{{ contentValue }}}
    </div>
  {{/if}}

  <div>
    {{#if isEditing}}
      <button type="submit" class="pull-left btn btn-primary btn-sm m-b-10 m-r-10 waves-effect" {{action "saveContentItem" contentItem }}>
        {{t "save"}}
      </button>
      <button type="submit" class="pull-left btn btn-sm m-b-10 waves-effect" {{action "cancelEditing" }}>
        {{t "cancel"}}
      </button>
      {{else}}
      <p {{action "startEditing" }}><a href=""><i class="fa fa-pencil"></i> {{t "edit"}}</a></p>
      <button style="display:none;" type="submit" class="pull-left btn btn-primary btn-sm m-b-10 waves-effect" {{action "startEditing" }}>
        {{t "edit"}}
      </button>
      <button style="display:none;" type="submit" class="pull-left btn btn-primary btn-sm m-b-10 waves-effect" {{action "previewContent" }}>
        {{t "preview"}}
      </button>
    {{/if}}
  </div>


  <div>
